<h1>Produtos</h1>
<div class="products">
    <div class="product">
        {{#each products}}
        <h2>Produto:{{this.name}}</h2>
        <img src="{{this.image}}" alt="{{this.name}}">
        <p>Preço: {{this.price}}</p>
        <p>Descrição: {{this.description}}</p>
        <div class="actions">
            <a href="/products/{{this._id}}">Detalhes</a>
            <a href="/products/edit/{{this._id}}">Editar</a>
        </div>
        {{/each}}
        
    </div>
</div>